/**app.wxss**/
@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,PingFang SC,Lantinghei SC,Helvetica Neue,Helvetica,Arial,Microsoft YaHei,\\5FAE\8F6F\96C5\9ED1,STHeitiSC-Light,simsun,\\5B8B\4F53,WenQuanYi Zen Hei,WenQuanYi Micro Hei,"sans-serif";
    height: 100%;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.header{
    position: absolute;
    z-index: 10;
    top: 0;
    left: 0;
    width: 100%;
}
.header-container{
    background-color: #fff;
    width: 100%;
    height: 45px;
    box-sizing: border-box;
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 0 10px #e5e5e5;
}
.header-container .back-text,.header-container .save-text{
    font-size: 16px;
    color: #3d464d;
    display: inline-block;
    height: 45px;
    line-height: 45px;
    padding: 0 15px;
}
.header-container .save-text.forbid{
    color: #999;
}
.container{
    width: 100%;
    height: 100%;
    overflow: auto;
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;
}

