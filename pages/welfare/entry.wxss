/**entry.wxss**/

.welfare-item{
    display: block;
    margin: 15px 15px 0 15px;
    border-radius: 4px;
    background-color: #fff;
}
.welfare-item .banner{
    width: 100%;
    height: 345rpx;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}
.welfare-item-bottom{
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
}
.welfare-item-title{
    line-height: 47px;
    padding-left: 10px;
    font-size: 16px;
    color: #333;
}
.welfare-item-time{
    line-height: 47px;
    padding-right: 15px;
    font-size: 13px;
    color: #b2b2b8;
}